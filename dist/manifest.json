{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "LOAF Extension",
  "description": "This is a Chrome extension built with React and TypeScript",
  "action": {
      "default_popup": "index.html",
      "default_title": "React Chrome Extension"
  },
  "background": {
      "service_worker": "src/background/background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs", "bookmarks", "nativeMessaging"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript/contentScript.js"]
    }
  ]
}
  